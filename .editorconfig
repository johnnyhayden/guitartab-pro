# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4

# JavaScript, TypeScript, JSON, YAML files
[*.{js,jsx,ts,tsx,json,yml,yaml}]
indent_style = space
indent_size = 2

# HTML, CSS, SCSS files
[*.{html,css,scss,sass}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab
